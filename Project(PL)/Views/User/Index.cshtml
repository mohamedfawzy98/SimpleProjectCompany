@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Count = @Model.Count();

}

<h1>All Users</h1>
<br />
<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input class="form-control" type="text" name="InputSearch" id="InputSearch" placeholder="Search by Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ", user.Roles)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

               
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There are No Users</h4>
    </div>
}

