@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			<div asp-validation-summary="All" class="alert alert-danger"></div>
			<input email" type="email" asp-for="Email" placeholder="Email">
			<input type="password" asp-for="Password" placeholder="Password">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RemmemberMe" class="checkbox">
					<span>RemmeberMe</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a href="SingUp"> Register Now!</a></p>
		<p><a href="ForgetPassword"> Forget Password!</a></p>
	</div>
</div>

