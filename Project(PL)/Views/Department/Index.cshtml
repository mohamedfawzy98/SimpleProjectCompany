@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Count = @Model.Count();

}

<h1>All Department</h1>

<br />
<br />

    <div>
    @TempData["Create"]
    </div>

<a asp-action="Create" class="btn btn-primary">Create</a>
<div>

    @if (Count > 0)
    {
        <table class="table table-striped table-hover">
           
                <thead>
                    <tr>
                        <th @Html.DisplayNameFor(D => D.Code)></th>
                        <th @Html.DisplayNameFor(D => D.Name)></th>
                        <th @Html.DisplayNameFor(D => D.DateOfCreation)></th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Code</td>
                        <td>@dept.Name</td>
                        <td>@dept.DateOfCreation</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-warning">Details</a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-success">Update</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            
        </table>
    }
    else
    {
        <p class="alert alert-danger">No Department</p>
    }
</div>

