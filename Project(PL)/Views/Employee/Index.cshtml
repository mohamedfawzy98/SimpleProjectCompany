@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Count = @Model.Count();

}

<h1>All Employee</h1>

<br />
<br />

<div>
    @TempData["create"]
</div>
<br>

<a asp-action="Create" class="btn btn-primary">Create</a>

<br />
<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input class="form-control" type="text" name="InputSearch" id="InputSearch" placeholder="Search by Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>

<br />
<div>

    @if (Count > 0)
    {
        <table class="table table-striped table-hover">

            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(E => E.Image)</th>
                    <th>@Html.DisplayNameFor(E => E.Name)</th>
                    <th>@Html.DisplayNameFor(E => E.Age)</th>
                    <th>@Html.DisplayNameFor(E => E.Address)</th>
                    <th>@Html.DisplayNameFor(E => E.Email)</th>
                    <th>@Html.DisplayNameFor(E => E.phone)</th>
                    <th>@Html.DisplayNameFor(E => E.Salary)</th>
                    <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                    <th>@Html.DisplayNameFor(E => E.WorkFor)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>

                            <img src="~/files/Image/@emp.ImageName" width="75" class="img-fluid rounded-circle" />
                        </td>
                        <td>@emp.Name</td>
                        <td>@emp.Age</td>
                        <td>@emp.Address</td>
                        <td>@Html.DisplayFor(E => @emp.Email)</td>
                        <td>@emp.phone</td>
                        <td>@Html.DisplayFor(E => @emp.Salary)</td>
                        <td>@Html.DisplayFor(E => @emp.IsActive)</td>
                        <td>@Html.DisplayFor(E => @emp.WorkFor.Name)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-warning">Details</a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-success">Update</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p class="alert alert-warnning">No Employee</p>
    }
</div>

